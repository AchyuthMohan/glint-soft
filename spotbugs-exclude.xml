<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude generated code -->
    <Match>
        <Class name="~.*\.generated\..*"/>
    </Match>
    
    <!-- Exclude test classes from certain checks -->
    <Match>
        <Class name="~.*Test.*"/>
        <Bug pattern="DM_EXIT"/>
    </Match>
    
    <!-- Exclude main method from DM_EXIT -->
    <Match>
        <Method name="main"/>
        <Bug pattern="DM_EXIT"/>
    </Match>
    
    <!-- Exclude serialization issues for DTOs -->
    <Match>
        <Class name="~.*DTO.*"/>
        <Bug pattern="SE_BAD_FIELD"/>
    </Match>
    
    <!-- Exclude certain warnings for Spring Boot applications -->
    <Match>
        <Class name="~.*Application.*"/>
        <Bug pattern="UWF_UNWRITTEN_FIELD"/>
    </Match>
</FindBugsFilter>
